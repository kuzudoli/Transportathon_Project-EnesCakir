@{
    Layout = "_AuthLayout";
    ViewBag.Title = "Şifremi Sıfırla";
}
@model ResetPasswordViewModel
<form method="post" asp-controller="Auth" asp-action="ResetPassword">
    <div asp-validation-summary="ModelOnly" id="errMsg" style="color:white;font-weight:500;background-color:red;border-radius:5px;">
        @ViewBag.Message
    </div>
    <div class="form-group">
        <label for="password">Şifre</label>
        <input type="password" class="form-control" id="password" asp-for="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label for="passwordConfirm">Şifre Onay</label>
        <input type="password" class="form-control" id="passwordConfirm" asp-for="PasswordConfirm">
        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
    </div>
    <button type="submit" class="btn btn-primary">Şifremi Güncelle</button>
</form>