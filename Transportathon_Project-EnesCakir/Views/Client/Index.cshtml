@{
    Layout = "_ClientLayout";
    ViewBag.Title = "Nakliyat Firmaları";
}

@model List<CompanyViewModel>

<h3>Nakliyat Firmaları</h3>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            Değerlendirme: ⭐⭐⭐ 3/5
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">Şirket kısa açıklaması, yaptıkları işi özetleyen kısa özet.</p>
            <a asp-controller="Company" asp-action="CompanyDetails" asp-route-id="@item.Id" class="btn btn-primary">İncele</a>
            <a asp-controller="Client" asp-action="CreateRequest" asp-route-companyId="@item.Id" class="btn btn-success">Talep Oluştur</a>
        </div>
        <div class="card-footer text-body-secondary">
            Kuruluş: @item.EstablishmentDate.ToShortDateString()<br />
            Ekip: @item.EmployeeCount
        </div>
    </div>
}
