@{
    Layout = "_ClientLayout";
    ViewBag.Title = "Profilim";
}
@model EditUserViewModel

<div class="container w-50">
    @if (TempData["Succeed"] != null)
    {
        <p id="info" style="color:green;font-weight:600;background-color:lightgreen;padding:10px;border-radius:25px;text-align:center;">
            @TempData["Succeed"]
        </p>
    }
    <form method="post" asp-controller="User" asp-action="EditProfile">
        <div asp-validation-summary="ModelOnly" id="errMsg" style="color:white;font-weight:500;background-color:red;border-radius:5px;">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="username" asp-for="UserName" disabled>
        </div>
        <div class="form-group">
            <label for="name">İsim</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="surname">Soyisim</label>
            <input type="text" class="form-control" id="surname" asp-for="Surname">
            <span class="text-danger" asp-validation-for="Surname"></span>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email" disabled>
        </div>
        <div class="form-group">
            <label for="phone">Telefon</label>
            <input type="tel" class="form-control" id="phone" asp-for="PhoneNumber" disabled>
        </div>
        <div class="form-group">
            <label for="birthdate">Doğum Tarihi</label>
            <input type="date" class="form-control" id="birthdate" asp-for="BirthDate">
            <span class="text-danger" asp-validation-for="BirthDate"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>