@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center">
    <h1 class="display-4">Transportathon'a Hoşgeldiniz!</h1>
    <p>Taşımacılık ihtiyacınızı en hızlı şekilde çözüme kavuşturan platform.</p>
</div>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            Değerlendirme: ⭐⭐⭐ 3/5
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">Şirket kısa açıklaması, yaptıkları işi özetleyen kısa özet.</p>
            <a asp-controller="Client" asp-action="CompanyDetails" asp-route-id="@item.Id" class="btn btn-primary">İncele</a>
        </div>
        <div class="card-footer text-body-secondary">
            Kuruluş: @item.EstablishmentDate.ToShortDateString() <br/>
            Ekip: @item.EmployeeCount
        </div>
    </div>
}